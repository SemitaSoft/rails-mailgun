<%= form_for(@template) do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% @template.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <style>
   textarea{ width: 700px; height:300px; }
  </style>
  <div class="field">
    <label for="name">Template name</label>
    <%= f.text_field :title, :style => 'width:400px; font-size:28px; display:block;' %>
  </div>
  <div class="field">
    <label for="name">Sender E-mail</label>
    <%= f.text_field :from, :style => 'width:400px; font-size:28px; display:block;' %>
  </div>
  <div class="field">
    <label for="name">Sender Name</label>
    <%= f.text_field :name, :style => 'width:400px; font-size:28px; display:block;' %>
  </div>
  <div class="field">
    <%= f.text_area :content, :class => 'ckeditor' %>
  </div>
  <div class="field">
    <%= f.text_area :textcontent %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>